{
  "name": "backend",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "backend/app",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "backend",
        "command": "docker-compose -f ../develop/docker-compose.yml --env-file ../develop/.env down && docker-compose -f ../develop/docker-compose.yml --env-file ../develop/.env up -d postgis backend"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "backend",
        "command": "pytest app/tests"
      }
    },
    "docker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t walkernest-backend -f backend/Dockerfile backend"
      }
    }
  },
  "tags": ["backend"]
}
